  <div class="field">
    <p> <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Enter your Email"%> </p>
  </div>
  <div class="field">
    <p> <%= f.label :password %>
    <%= f.password_field :password , placeholder: "Must be more than 6 characters"%> </p>
  </div>

  <div class="field">
    <p> <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "Must match Password" %> </p>
  </div>
  <small> (Must include lower case, upper case, and a number) </small>

  <div class="field">
    <p> <%= f.label :phone_number, "Text-enabled Phone Number" %>
    <%= f.telephone_field :phone_number, placeholder: "Without brackets and spaces" %> </p>
  </div>
  <div class="field">
    <p> <%= f.label :carrier_id, "Phone Carrier" %>
      <%= f.select( :carrier_id,  Carrier.all.map {|u| [u.carrier_name,u.id]}, {:include_blank => "Select a Carrier"}) %> </p>
  </div>
  <div class="field">
    <p> <%= f.label :street_addr, "Street Address" %>
    <%= f.text_field :street_addr %> </p>
  </div>
  <div class="field">
    <p> <%= f.label :apartment_no, "Apartment No." %>
    <%= f.text_field :apartment_no %> </p>
  </div>
  <div class="field">
    <p> <%= f.label :city %>
    <%= f.text_field :city %> </p>
  </div>
  <div class="field">
    <p> <%= f.label :zip_code %>
    <%= f.text_field :zip_code %> </p>
  </div>
  <div class="field">
    <p> <%= f.label :state %>
    <%= f.text_field :state %> </p>
  </div>
  <div class="field">
    <p> <%= f.label :country %>
    <%= f.text_field :country %> </p>
  </div>
