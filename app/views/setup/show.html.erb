<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Email</th>
      <th>Password</th>
      <th>Phone number</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.order("id asc").each do |profile| %>
      <tr>
        <td><%= profile.id %></td>
        <td><%= profile.email %></td>
        <td><%= profile.password %></td>
        <td><%= profile.phone_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>

