<h1>Setup</h1>
<p>welcome to setup. </p>  

<div class="setup_page_1">

  <%= form_for :profile, :url => "./create" do |p| %>
    <%= p.fields_for :basic_info do |a| %>
      <p> First Name: <%= a.text_field :first_name %> </p>
      <p> Middle Name: <%= a.text_field :middle_name %> </p>
      <p> Last Name: <%= a.text_field(:last_name) %> </p>
      <p> Date of Birth: <%= a.date_field( :dob) %> </p> 
      <p> SSN: <%= a.text_field(:ssn) %> </p>
    <% end %>

    <p> Email address: <%= p.email_field(:email) %> </p>
    <p> Password: <%= p.password_field(:password) %> </p>
    <p> Confirm Password: <%= p.password_field(:password_confirmation) %> </p>
    <p> Phone No.: <%= p.telephone_field( :phone_number) %> </p>
    <p> Select Carrier: <%= p.select(:carrier_id, options_from_collection_for_select(@ca, 'id', 'carrier_name', 1 )) %> </p>

    <p> Street Address: <%= p.text_field(:street_addr) %> </p>
    <p> Apartment No.: <%= p.text_field(:apartment_no) %> </p>
    <p> City: <%= p.text_field(:city) %> </p>
    <p> Zip-code: <%= p.text_field(:zip_code) %> </p>
    <p> State: <%= p.text_field(:state) %> </p>
    <p> Country: <%= p.text_field(:country) %> </p>
  

    <p> Select which option to use for SSC: <%= p.select("auth_option_id", options_from_collection_for_select(@ao, 'id', 'name', 1 )) %> </p>
   
    <p> Enter card no. chosen for SSC: <%= p.text_field(:ssc_value) %> </p>
    <!-- TODO if selected option is 1(SSN) then make this field disabled and use the above mentioned ssn instead. -->
  
    <p> Select SSC expiry duration: <%= p.select("ssc_lifetime", options_from_collection_for_select( @lt,'last', 'first',24)) %> </p>
  

    <p>  <%= p.submit %> </p>
  </div>
<% end %>

