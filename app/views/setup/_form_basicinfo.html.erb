  <div class="field">
    <p><%= f.label(:first_name, "First name") %>
    <%= f.text_field :first_name, placeholder: "Enter Your First Name" %> </p>
  </div>
  <div class="field">
    <p><%= f.label(:middle_name, "Middle name") %>
    <%= f.text_field :middle_name, placeholder: "Enter Your Middle Name" %> </p>
  </div>
  <div class="field">
    <p><%= f.label(:last_name, "Last name") %>
    <%= f.text_field :last_name, placeholder: "Enter Your Last Name" %> </p>
  </div>
  <div class="dob_select">
    <p><%= f.label(:dob, "Date of Birth") %>
    <%= f.date_field :dob,  placeholder: "MM/DD/YYYY"%>

  </div>
  <div class="ssn_value">
    <p><%= f.label(:ssn, "Social Security Number")%>
    <%= f.text_field :ssn, placeholder: "Enter SSN", :class => "ssnv", :maxlength=>"15"  %> </p>
  </div>


  <script type="text/javascript">
    $(function(){    

        if($('.ssnv').val().length==9){
          var ssn = String($('.ssnv').val());
          $('.ssnv').val(ssn.substring(0,3)+'-'+ssn.substring(3,5)+'-'+ssn.substring(5,10));}

        $('.ssn_value').keyup(function(){

        var ssn = (String($('.ssnv').val())).split(/[a-zA-Z() -]/).join('');
        var len = ssn.length;

        if (len!= (9))
        $('.ssnv').css('color','red');
        else
        $('.ssnv').css('color','black');

        if(len>3 && len <5)
        $('.ssnv').val(ssn.substring(0,3)+'-'+ssn.substring(3,5));
        else if (len>5)
        $('.ssnv').val(ssn.substring(0,3)+'-'+ssn.substring(3,5)+'-'+ssn.substring(5,10));
        return true;
      });

  });
</script>

